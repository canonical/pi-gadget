device-tree: bcm2709-rpi-3-b-plus
volumes:
  pi:
    schema: mbr
    bootloader: u-boot
    structure:
      - type: 0C
        filesystem: vfat
        filesystem-label: system-boot
        role: system-boot
        size: 512M
        content:
          - source: @@DESTDIR@@/boot-assets/
            target: /
          - source: rootfs:/boot/vmlinuz-@@KERNEL_VERSION@@
            target: vmlinuz
          - source: rootfs:/boot/initrd.img-@@KERNEL_VERSION@@
            target: initrd.img
